include mixins/card
html
  head
    link(
        rel='stylesheet',
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css",
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh",
        crossorigin="anonymous"
        )
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Yomoji Leaderboard
  body
    h1 BETA Yomoji Leaderboard


    .container
      .row
        .col
          h3 Top Recievers
          ul
            each val, index in recipients
                +card(val.realName, val.displayName, val.profileImage, val.title, val.total, index)

        .col
          h3 Top Givers
          ul
            each val, index in givers
                +card(val.realName, val.displayName, val.profileImage, val.title, val.total, index)
